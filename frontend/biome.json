{
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.css"]
  },
  "overrides": [
    {
      "includes": ["vitest.setup.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noEmptyBlockStatements": "off",
            "noConsole": "off",
            "noExplicitAny": "off"
          },
          "complexity": {
            "noUselessConstructor": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["app/globals.css"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ],
  "extends": ["ultracite"],
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json"
}
